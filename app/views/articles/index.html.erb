<%= link_to "New Article", new_article_path %>


<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
      <article>
        <h1><%= link_to article.title, article_path(article) %></h1>
        <p><%= article.content %></p>
      </article>
<% end %>
    </div>
  </div>
</div>
