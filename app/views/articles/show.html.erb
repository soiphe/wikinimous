<div class="container">

<h1>
  <%= @article.title %>
  <%= link_to edit_article_path(@article) do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to article_path(@article), method: :delete do %>
    <i class="fa fa-trash-o"></i>
  <% end %>
</h1>
<hr>
<p><%= @article.content %></p>

</div>



